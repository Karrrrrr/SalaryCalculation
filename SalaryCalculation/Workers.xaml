<Window x:Class="SalaryCalculation.Workers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryCalculation"
        mc:Ignorable="d"
        Title="Сотрудники" Height="450" Width="800" MinHeight="450" MinWidth="800" IsVisibleChanged="Window_IsVisibleChanged">
    <Grid ShowGridLines="True" Name="WorkersGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock FontSize="20" FontWeight="Bold" TextAlignment="Center" Grid.Column="0" Grid.Row="0">ФИО</TextBlock>
        <TextBlock FontSize="20" FontWeight="Bold" TextAlignment="Center" Grid.Column="1" Grid.Row="0">Должность</TextBlock>
        <TextBlock FontSize="20" FontWeight="Bold" TextAlignment="Center" Grid.Column="2" Grid.Row="0">Разряд</TextBlock>
        <TextBlock FontSize="20" FontWeight="Bold" TextAlignment="Center" Grid.Column="3" Grid.Row="0" TextWrapping="Wrap">Членство в профсоюзе</TextBlock>
    </Grid>
</Window>
