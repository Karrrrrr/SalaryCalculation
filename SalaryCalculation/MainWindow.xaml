<Window x:Class="SalaryCalculation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalaryCalculation"
        mc:Ignorable="d"
        Title="Расчёт заработной платы" Height="450" Width="800" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button DockPanel.Dock="Top" FontSize="20" Width="250" Height="40" Grid.Row="0" Click="Button_Click">Просмотр сотрудников</Button>
        <Button DockPanel.Dock="Bottom" FontSize="20" Width="320" Height="40" Grid.Row="1" Click="Button_Click_1">Управление заработной платой</Button>
    </Grid>
</Window>
